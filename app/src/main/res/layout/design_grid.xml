<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgFood"
        android:layout_width="154dp"
        android:layout_height="160dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="124dp"
        android:layout_marginLeft="124dp"
        android:layout_marginTop="-2dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/txtLongitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgFood"
        android:layout_alignEnd="@+id/imgFood"
        android:layout_alignRight="@+id/imgFood"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="69dp"
        android:layout_marginRight="69dp"
        android:text="Longitude"
        android:textAlignment="center"
        android:textColor="#8cba51"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/txtLatitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgFood"
        android:layout_alignEnd="@+id/imgFood"
        android:layout_alignRight="@+id/imgFood"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="82dp"
        android:layout_marginRight="82dp"
        android:text="Latitude"
        android:textAlignment="center"
        android:textColor="#8cba51"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtLongitude"
        android:layout_alignEnd="@+id/txtLongitude"
        android:layout_alignRight="@+id/txtLongitude"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="26dp"
        android:layout_marginRight="26dp"
        android:text="Name"
        android:textAlignment="center"
        android:textColor="#697c37"
        android:textSize="17sp" />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    android:id="@+id/ll">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"

        android:background="#fff"
        android:layout_height="150dp">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Crop Snap"
            android:textSize="25dp"
            android:layout_gravity="center"
            android:gravity="center"
            />



        <ImageView
            android:id="@+id/im"
            android:layout_width="match_parent"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="5dp"
            android:layout_height="75dp"
            app:srcCompat="@drawable/splash" />
        <TextView
            android:id="@+id/textView8"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="10dp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Complete Platform for Crop Identification" />
    </LinearLayout>

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="342dp"
        android:background="#fff"
        android:layout_height="280dp">

        <ImageView
            android:id="@+id/ivData"
            android:layout_width="162dp"
            android:layout_height="135dp"
            android:layout_marginLeft="15dp"
            app:layout_column="0"
            app:layout_row="0"
            app:srcCompat="@drawable/data" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#000000"
            app:layout_gravity="center"
            android:textStyle="bold"
            android:text="Storage Available"
            app:layout_column="0"
            app:layout_row="1" />

        <ImageView
            android:id="@+id/ivMaps"
            android:layout_width="193dp"
            android:layout_height="135dp"
            app:layout_column="1"
            app:layout_row="0"
            app:srcCompat="@drawable/maps" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Explore Crops Around You"
            android:textStyle="bold"
            android:textColor="#000000"
            app:layout_column="1"
            app:layout_row="1" />

        <ImageView
            android:id="@+id/ivSearch"
            android:layout_width="126dp"
            android:layout_height="103dp"
            android:layout_marginLeft="15dp"
            app:layout_column="0"
            app:layout_row="2"
            app:srcCompat="@drawable/search" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="#000000"
            android:text="Crop Identification"
            app:layout_column="0"
            app:layout_row="3" />

        <ImageView
            android:id="@+id/ivOffline"
            android:layout_width="169dp"
            android:layout_height="88dp"
            app:layout_column="1"
            app:layout_row="2"
            app:srcCompat="@drawable/off" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            app:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:text="Offline Use"
            app:layout_column="1"
            app:layout_row="3" />
    </androidx.gridlayout.widget.GridLayout>

    <Button
        android:id="@+id/btnIdentify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/custom_button"
        android:textSize="20sp"
        android:layout_marginTop="75dp"
        android:text="Identify"
        android:textAllCaps="false" />
</LinearLayout>